<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
  </head>
  <body>
    <div id="users"></div>
  </body>
  <script>
    const mapper = (users) => {
      users.map((ele) => {
        let name = document.createElement("h1");
        name.innerHTML = ele.name;
        let img = document.createElement("img");
        img.src = `http://localhost:8090/${ele.profile}`;
        document.getElementById("users").append(name, img);
      });
    };

    const getUser = async () => {
      let req = await fetch("http://localhost:8090/user");
      let res = await req.json();
      console.log(res);
      mapper(res);
    };
    getUser();
  </script>
</html>
